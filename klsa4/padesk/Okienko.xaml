<Window x:Class="Sklep.Okienko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklep"
        mc:Ignorable="d"
        Title="Okienko" Height="252" Width="361">
    <Grid>
        <GroupBox Header="Dodaj nowy produkt" Grid.ColumnSpan="2" Margin="20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="5 20 5 0">
                    <StackPanel Margin="10" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label  Width="50" Content="Nazwa" VerticalAlignment="Center"/>
                        <TextBox x:Name="Nazwa" Width="150" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Width="50" Content="Cena" VerticalAlignment="Center"/>
                        <TextBox x:Name="Cena" Width="150" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Margin="10" Padding="10 2 10 2" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Dodaj" Click="Button_Click"></Button>
                </StackPanel>
            </DockPanel >
        </GroupBox>
    </Grid>
</Window>
