<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" Height="90" Grid.Row="0" Margin="0,24,0,0" Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*">
                    </ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Produkt"></Label>
                <Label Grid.Column="0" Grid.Row="1" Content="Cena"></Label>
                <TextBox Grid.Column="1" Grid.Row="0" IsReadOnly="True" VerticalAlignment="Top"></TextBox>
                <TextBox Grid.Column="1" Grid.Row="1" IsReadOnly="True" VerticalAlignment="Top"></TextBox>
                <Button Grid.Column="0" Grid.Row="2" Content="&lt;&lt;" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
                <Button Grid.Column="1" Grid.Row="2" Content="&gt;&gt;" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            </Grid>
        </DockPanel>
        <DockPanel Width="300" Height="100" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,24,0,0" Background="LightGray" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*">
                    </ColumnDefinition>
                    <ColumnDefinition Width="*">
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RadioButton Content="%" Grid.Column="0" Grid.Row="0"></RadioButton>
                <RadioButton Content="Kwota" Grid.Column="0" Grid.Row="1"></RadioButton>
                <TextBox Grid.Column="0" Grid.Row="2"></TextBox>

                <Button Content="Oblicz" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"></Button>
                <Label Grid.Column="1" Grid.Row="1" Content="Cena koszyka"></Label>
                <Label Grid.Column="1" Grid.Row="2" Content="Cena po zniżkach"></Label>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
